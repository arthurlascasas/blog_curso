

<div class="p-4">
  <h4 class="fst-italic"><%= t 'articles.archives' %></h4>
  <ol class="list-unstyled mb-0">
    
      <% @archives.each do |month_year, count| %>
      <li>
        <%= link_to "#{month_year.capitalize} (#{count})", articles_path(month_year: month_year), class: "nav-item nav-link link-body-emphasis #{'filter-active' if month_year == params[:month_year]}" %>
      </li>
      <% end %>

    
    
  </ol>
</div>
