
 <article class="blog-post">
  <h2 class="display-5 link-body-emphasis mb-1"><%= @article.title %></h2>
  <p class="blog-post-meta"><%= month_day_comma_year(@article.created_at) %> by <%= @article.user.email %></p>

  <p><%= @article.body %></p>


  
  <div class="d-flex">
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-secondary' if policy(@article).update?  %>
    <%= link_to 'Apagar', article_path(@article), class: 'btn btn-danger ms-2', method: :delete, data: {confirm: 'Are you sure?'} if policy(@article).destroy? %>
   	<%= link_to 'Back', root_path, class: 'btn btn-secondary ms-2' %>
  </div>
  
 
</article>



