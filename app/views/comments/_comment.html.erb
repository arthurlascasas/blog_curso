<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= month_day_comma_year(comment.created_at) %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= t 'comments.index.commenter' %>: <%= sub_masked_email(comment.user.email) %></h6>
    <p class="card-text"><%= comment.body %></p>
    <%= link_to  t('app.button.destroy'), article_comment_path(@article, comment), class: 'btn btn-danger ms-2', method: :delete, data: {confirm: t('app.message.confirm_destroy')} if policy(comment).destroy? %>
  </div>
</div>